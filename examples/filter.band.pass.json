{
  "modules": [
    {
      "name": "BandFilter",
      "package": "cloudbrain.modules.filters.band",
      "options": {
        "filter_type": "bandpass",
        "start_frequency": 0.5,
        "stop_frequency": 10.0,
        "sampling_frequency": 500.0
      },
      "subscribers": [
        {
          "name": "PikaSubscriber",
          "package": "cloudbrain.subscribers.rabbitmq",
          "options": {
            "rabbitmq_address": "localhost",
            "rabbitmq_user": "guest",
            "rabbitmq_pwd": "guest",
            "rabbitmq_vhost": "/"
          },
          "base_routing_key": "some_unique_id:device_name",
          "metrics": [
            {
              "metric_name": "eeg",
              "num_channels": 8
            }
          ]
        }
      ],
      "publishers": [
        {
          "name": "PikaPublisher",
          "package": "cloudbrain.publishers.rabbitmq",
          "options": {
            "rabbitmq_address": "localhost",
            "rabbitmq_user": "guest",
            "rabbitmq_pwd": "guest",
            "rabbitmq_vhost": "/"
          },
          "base_routing_key": "some_unique_id:device_name",
          "metrics": [
            {
              "metric_name": "heart_rate",
              "num_channels": 8,
              "buffer_size": 10
            }
          ]
        }
      ]
    }
  ]
}
